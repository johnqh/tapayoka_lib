{
  "name": "@sudobility/tapayoka_lib",
  "version": "0.0.1",
  "description": "Business logic library with Zustand stores for Tapayoka",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": { "access": "restricted" },
  "files": ["dist/**/*"],
  "scripts": {
    "build": "bunx tsc -p tsconfig.build.json",
    "build:watch": "bunx tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "vitest run",
    "lint": "bunx eslint src",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --write 'src/**/*.ts'"
  },
  "author": "Sudobility",
  "license": "BUSL-1.1",
  "peerDependencies": {
    "@sudobility/tapayoka_client": "^0.0.1",
    "@sudobility/tapayoka_types": "^0.0.1",
    "@sudobility/types": "^1.9.54",
    "@tanstack/react-query": ">=5.0.0",
    "react": ">=18.0.0",
    "zustand": ">=5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@sudobility/tapayoka_client": "^0.0.1",
    "@sudobility/tapayoka_types": "^0.0.1",
    "@sudobility/types": "^1.9.54",
    "@tanstack/react-query": "^5.90.5",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "react": "^19.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4",
    "zustand": "^5.0.0"
  }
}
